<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".firstscreen">


        <RelativeLayout
            android:id="@+id/site_card"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <ImageView
                android:id="@+id/maasai_imageView"
                android:layout_width="100dp"
                android:layout_alignParentStart="true"
                android:layout_height="100dp"
                android:src="@drawable/playstore"/>

            <TextView
                android:id="@+id/maasai_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/maasai_imageView"
                android:text="@string/maasai_mara"
                android:textSize="35sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                />

            <TextView
                android:id="@+id/maasai_catchphrase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/magic_in_the_savannah"
                android:textSize="25sp"
                android:textStyle="italic"
                android:layout_alignBottom="@id/maasai_imageView"
                android:layout_toEndOf="@id/maasai_imageView"
                android:layout_marginBottom="20dp"
                android:layout_marginStart="20dp"/>

        </RelativeLayout>

</LinearLayout>